@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-3">
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card h-100 shadow-sm border-0 card-primary card-outline">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-uppercase text-muted mb-1">EPIs cadastrados</h6>
                        <h2 class="mb-0 fw-semibold">@Model.TotalEpiTypes</h2>
                    </div>
                    <span class="icon-circle bg-primary text-white">
                        <i class="fas fa-helmet-safety"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card h-100 shadow-sm border-0 card-success card-outline">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-uppercase text-muted mb-1">Colaboradores ativos</h6>
                        <h2 class="mb-0 fw-semibold">@Model.TotalActiveEmployees</h2>
                    </div>
                    <span class="icon-circle bg-success text-white">
                        <i class="fas fa-users"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card h-100 shadow-sm border-0 card-info card-outline">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-uppercase text-muted mb-1">Entregas no mês</h6>
                        <h2 class="mb-0 fw-semibold">@Model.DeliveriesInMonth</h2>
                    </div>
                    <span class="icon-circle bg-info text-white">
                        <i class="fas fa-truck-loading"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card h-100 shadow-sm border-0 card-danger card-outline">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-uppercase text-muted mb-1">EPIs com alerta</h6>
                        <h2 class="mb-0 fw-semibold">@Model.LowStockItemsCount</h2>
                    </div>
                    <span class="icon-circle bg-danger text-white">
                        <i class="fas fa-exclamation-triangle"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-12 col-xl-6">
        <div class="card shadow-sm h-100">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="card-title mb-0">EPIs com estoque baixo</h5>
                <a asp-controller="Inventory" asp-action="Index" class="btn btn-sm btn-outline-primary">
                    Ver estoque
                </a>
            </div>
            <div class="card-body p-0">
                @if (Model.LowStockItems.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Descrição</th>
                                    <th class="text-center">Quantidade</th>
                                    <th class="text-center">Mínimo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.LowStockItems)
                                {
                                    <tr>
                                        <td class="fw-semibold">@item.EpiCode</td>
                                        <td>@item.EpiDescription</td>
                                        <td class="text-center text-danger fw-semibold">@item.QuantityAvailable</td>
                                        <td class="text-center">@item.MinimumQuantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        <i class="fas fa-check-circle fa-2x mb-2 text-success"></i>
                        <p class="mb-0">Nenhum alerta de estoque no momento.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-12 col-xl-6">
        <div class="card shadow-sm h-100">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="card-title mb-0">Últimas entregas</h5>
                <a asp-controller="Deliveries" asp-action="Index" class="btn btn-sm btn-outline-primary">
                    Ver todas
                </a>
            </div>
            <div class="card-body">
                @if (Model.RecentDeliveries.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var delivery in Model.RecentDeliveries)
                        {
                            <div class="list-group-item list-group-item-action px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1 fw-semibold">@delivery.EmployeeName</h6>
                                        <small class="text-muted">@delivery.DeliveryDate.ToString("dd/MM/yyyy") - Responsável: @delivery.ResponsibleName</small>
                                    </div>
                                    <span class="badge bg-primary">@delivery.Items.Sum(i => i.Quantity) itens</span>
                                </div>
                                <div class="mt-2">
                                    @foreach (var item in delivery.Items)
                                    {
                                        <span class="badge text-bg-light border me-1 mb-1">@item.EpiCode - @item.EpiDescription (@item.Quantity)</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-box-open fa-2x mb-2"></i>
                        <p class="mb-0">Nenhuma entrega registrada recentemente.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .icon-circle {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }
    </style>
}
