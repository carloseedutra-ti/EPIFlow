@using EPIFlow.Web.Models.Biometrics
@model BiometricAgentIndexViewModel
@{
    ViewData["Title"] = "Agentes Biométricos";
}

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">Novo agente</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="Form.Name" class="form-label"></label>
                        <input asp-for="Form.Name" class="form-control" />
                        <span asp-validation-for="Form.Name" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Form.MachineName" class="form-label"></label>
                        <input asp-for="Form.MachineName" class="form-control" />
                        <span asp-validation-for="Form.MachineName" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Form.Description" class="form-label"></label>
                        <textarea asp-for="Form.Description" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Form.Description" class="text-danger small"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Form.PollingIntervalSeconds" class="form-label"></label>
                        <input asp-for="Form.PollingIntervalSeconds" class="form-control" type="number" min="3" max="300" />
                        <span class="form-text">Intervalo padrão: 5 segundos.</span>
                        <span asp-validation-for="Form.PollingIntervalSeconds" class="text-danger small"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i> Registrar agente
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card shadow-sm h-100">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="card-title mb-0">Agentes cadastrados</h5>
                <span class="badge bg-secondary">@Model.Agents.Count</span>
            </div>
            <div class="card-body p-0">
                @if (Model.Agents.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Agente</th>
                                    <th>Status</th>
                                    <th>Chave</th>
                                    <th class="text-end">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var agent in Model.Agents)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@agent.Name</div>
                                            @if (!string.IsNullOrEmpty(agent.Description))
                                            {
                                                <div class="text-muted small">@agent.Description</div>
                                            }
                                            <div class="text-muted small">
                                                Máquina: @(string.IsNullOrWhiteSpace(agent.MachineName) ? "—" : agent.MachineName)
                                            </div>
                                            <div class="text-muted small">
                                                Último contato: @(agent.LastSeenAtUtc.HasValue ? agent.LastSeenAtUtc.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm") : "Nunca")
                                            </div>
                                            <div class="text-muted small">
                                                Polling: @agent.PollingIntervalSeconds s
                                            </div>
                                        </td>
                                        <td>
                                            @if (agent.IsActive)
                                            {
                                                <span class="badge bg-success">Ativo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inativo</span>
                                            }
                                            @if (agent.IsOnline)
                                            {
                                                <span class="badge bg-info text-dark ms-2">Online</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="input-group input-group-sm">
                                                <input type="text" class="form-control form-control-sm js-agent-key" value="@agent.ApiKey" readonly />
                                                <button type="button" class="btn btn-outline-secondary js-copy-key" title="Copiar">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group">
                                                <form asp-action="Toggle" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@agent.Id" />
                                                    <input type="hidden" name="isActive" value="@(agent.IsActive ? "false" : "true")" />
                                                    <button type="submit" class="btn btn-sm @(agent.IsActive ? "btn-outline-warning" : "btn-outline-success")" title="@(agent.IsActive ? "Desativar" : "Ativar")">
                                                        <i class="fas @(agent.IsActive ? "fa-power-off" : "fa-play")"></i>
                                                    </button>
                                                </form>
                                                <form asp-action="ResetKey" method="post" class="d-inline ms-1">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@agent.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Gerar nova chave">
                                                        <i class="fas fa-key"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        Nenhum agente configurado ainda.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('click', function (event) {
            const copyButton = event.target.closest('.js-copy-key');
            if (!copyButton) {
                return;
            }

            const input = copyButton.closest('.input-group')?.querySelector('.js-agent-key');
            if (!input) {
                return;
            }

            input.select();
            input.setSelectionRange(0, input.value.length);
            navigator.clipboard.writeText(input.value)
                .then(() => {
                    copyButton.classList.remove('btn-outline-secondary');
                    copyButton.classList.add('btn-success');
                    setTimeout(() => {
                        copyButton.classList.remove('btn-success');
                        copyButton.classList.add('btn-outline-secondary');
                    }, 1500);
                })
                .catch(() => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Erro',
                        text: 'Não foi possível copiar a chave.'
                    });
                });
        });
    </script>
}
