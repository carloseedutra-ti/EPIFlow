@model IReadOnlyList<EPIFlow.Web.Models.Users.UserListItemViewModel>
@{
    ViewData["Title"] = "Usu&aacute;rios";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Gest&atilde;o de usu&aacute;rios</h5>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus me-1"></i> Novo usu&aacute;rio
        </a>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th class="text-nowrap">E-mail</th>
                            <th>Departamento</th>
                            <th>Cargo</th>
                            <th>Permiss&otilde;es</th>
                            <th>Agente padr&atilde;o</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">A&ccedil;&otilde;es</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@(string.IsNullOrWhiteSpace(user.FullName) ? "-" : user.FullName)</td>
                                <td>@user.Email</td>
                                <td>@(string.IsNullOrWhiteSpace(user.Department) ? "-" : user.Department)</td>
                                <td>@(string.IsNullOrWhiteSpace(user.JobTitle) ? "-" : user.JobTitle)</td>
                                <td>@(string.IsNullOrWhiteSpace(user.RolesDescription) ? "-" : user.RolesDescription)</td>
                                <td>@(string.IsNullOrWhiteSpace(user.DefaultAgentName) ? "-" : user.DefaultAgentName)</td>
                                <td class="text-center">
                                    <span class="badge @(user.IsActive ? "bg-success" : "bg-secondary")">
                                        @(user.IsActive ? "Ativo" : "Inativo")
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-pen"></i> Editar
                                        </a>
                                        <form asp-action="ToggleStatus" asp-route-id="@user.Id" method="post" class="d-inline ms-1">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="isActive" value="@(user.IsActive ? "false" : "true")" />
                                            <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-outline-warning" : "btn-outline-success")">
                                                <i class="fas @(user.IsActive ? "fa-user-slash" : "fa-user-check")"></i>
                                                @(user.IsActive ? "Desativar" : "Reativar")
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-4 text-center text-muted">
                Nenhum usu&aacute;rio cadastrado.
            </div>
        }
    </div>
</div>
