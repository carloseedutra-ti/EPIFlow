@model EPIFlow.Web.Models.Users.UserFormViewModel
@{
    ViewData["Title"] = "Editar usu&aacute;rio";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-user-edit me-2"></i>Editar usu&aacute;rio</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FullName" class="form-label">Nome completo</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label form-required">E-mail</label>
                    <input asp-for="Email" class="form-control" autocomplete="username" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Department" class="form-label">Departamento</label>
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="JobTitle" class="form-label">Cargo</label>
                    <input asp-for="JobTitle" class="form-control" />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="DefaultBiometricAgentId" class="form-label">Agente padr&atilde;o</label>
                    <select asp-for="DefaultBiometricAgentId" asp-items="Model.AgentOptions" class="form-select"></select>
                    <span asp-validation-for="DefaultBiometricAgentId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Password" class="form-label">Nova senha</label>
                    <input asp-for="Password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small class="text-muted">Deixe em branco para manter a senha atual.</small>
                </div>
                <div class="col-md-6">
                    <label asp-for="ConfirmPassword" class="form-label">Confirmar nova senha</label>
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label form-required">Permiss&otilde;es</label>
                    <div class="border rounded p-3">
                        @foreach (var role in Model.RoleOptions)
                        {
                            var roleId = $"role_{role.Value.Replace(" ", "_")}";
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role.Value" id="@roleId" @(role.Selected ? "checked" : string.Empty) />
                                <label class="form-check-label" for="@roleId">@role.Text</label>
                            </div>
                        }
                    </div>
                    @Html.ValidationMessage("SelectedRoles", null, new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    <label asp-for="IsActive" class="form-label">Status</label>
                    <div class="form-check form-switch pt-2">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label class="form-check-label" for="IsActive">Usu&aacute;rio ativo</label>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-light">Cancelar</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Salvar altera&ccedil;&otilde;es
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
