@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm border-danger-subtle">
            <div class="card-body text-center py-5">
                <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                <h2 class="fw-semibold text-danger">Ocorreu um erro</h2>
                <p class="text-muted">Não foi possível concluir sua solicitação. Tente novamente em instantes.</p>
                @if (Model.ShowRequestId)
                {
                    <p class="small text-muted mb-0">Código de rastreio: <code>@Model.RequestId</code></p>
                }
            </div>
        </div>
    </div>
</div>
