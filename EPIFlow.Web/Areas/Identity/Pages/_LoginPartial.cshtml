@using Microsoft.AspNetCore.Identity
@using EPIFlow.Infrastructure.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user-circle me-1"></i> @User.Identity?.Name
        </a>
        <div class="dropdown-menu dropdown-menu-end">
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Minha conta</a>
            <div class="dropdown-divider"></div>
            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="dropdown-item p-0">
                <button type="submit" class="btn btn-link dropdown-item">Sair</button>
            </form>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
    </li>
}
</ul>
