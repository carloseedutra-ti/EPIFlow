@model TenantDashboardDto
@{
    ViewData["Title"] = "Painel de Tenants";
}

<div class="row g-3">
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card card-primary card-outline shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-1">Total de empresas</h6>
                        <h2 class="fw-semibold mb-0">@Model.TotalTenants</h2>
                    </div>
                    <span class="icon-circle bg-primary text-white"><i class="fas fa-building"></i></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card card-success card-outline shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-1">Ativas</h6>
                        <h2 class="fw-semibold mb-0">@Model.ActiveTenants</h2>
                    </div>
                    <span class="icon-circle bg-success text-white"><i class="fas fa-check-circle"></i></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card card-warning card-outline shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-1">Suspensas</h6>
                        <h2 class="fw-semibold mb-0">@Model.SuspendedTenants</h2>
                    </div>
                    <span class="icon-circle bg-warning text-white"><i class="fas fa-pause-circle"></i></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card card-danger card-outline shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase mb-1">Bloqueadas</h6>
                        <h2 class="fw-semibold mb-0">@Model.BlockedTenants</h2>
                    </div>
                    <span class="icon-circle bg-danger text-white"><i class="fas fa-ban"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-12 col-xl-6">
        <div class="card shadow-sm h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">Receita Ãºltimos 30 dias</h5>
            </div>
            <div class="card-body display-6 fw-semibold text-success">
                @Model.TotalPaymentsLast30Days.ToString("C")
            </div>
        </div>
    </div>
    <div class="col-12 col-xl-6">
        <div class="card shadow-sm h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">Receita acumulada</h5>
            </div>
            <div class="card-body display-6 fw-semibold text-primary">
                @Model.TotalPaymentsOverall.ToString("C")
            </div>
        </div>
    </div>
</div>

<div class="mt-4 d-flex justify-content-end">
    <a asp-area="Master" asp-controller="Tenants" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i> Nova empresa
    </a>
</div>
